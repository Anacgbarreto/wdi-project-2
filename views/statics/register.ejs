<div class="container">
  <h1>Register</h1>
  <% if (locals.message) { %>
    <p><%= message %></p>
  <% } %>
  <form action="/register" method="post">
    <p><input class="form-control account" type="text" name="username" placeholder="Username"></p>
    <p><input class="form-control account" type="password" name="password" placeholder="Password"></p>
    <p><input class="form-control account" type="password" name="passwordConfirmation" placeholder="Confirm Password"></p>
    <input type="submit" value="Register" class="btn btn-primary">
  </form>
</div>
