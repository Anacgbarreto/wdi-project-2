<div class="cover">
  <div class="background">
    <div class="image-container">
      <% for (const item of artist.instagramData.items.slice().sort(() => .5 - Math.random())) { %>
        <img src="<%= item.images.thumbnail.url %>"></a>
      <% } %>
    </div>
  </div>

  <div class="container info">
    <img class="profile-picture" src="<%= artist.profilePic %>" alt="">

    <div class="left">
      <h1><%= artist.name %></h1>
      <p><%= artist.studio %></p>
      <p> <img src="/images/location.svg" width="32"><%= artist.location %></p>
    </div>

    <div class="right">
      <p>
      <img src="/images/instagram.svg" width="32"><a href="https://instagram.com/<%= artist.instagram %>"><%= artist.instagram %></a></p>
      <p>
      <img src="/images/mail.svg" width="32"><a href="mailto:<%= artist.contact %>"><%= artist.contact %></a></p>

      <% if (artist.website) { %>
        <p><img src="/images/website.svg" width="32">
        <a href="<%= artist.website %>"><%= artist.website %></a></p>
      <% } %>
    </div>
  </div>
</div>

<div class="container">
  <% if (loggedIn && user.admin) { %>
    <a class="btn btn-danger" href="/artists/<%= artist._id %>">Delete</a>
    <a class="btn btn-primary" href="/artists/<%= artist._id %>/edit">Edit</a>
  <% } %>

  <h2>Portfolio</h2>
  <div class="portfoliopics">
    <% const instagramPhotos = artist.instagramData.items.slice(); %>
    <% while (instagramPhotos.length) { %>
      <% const rowPhotos = [instagramPhotos.shift(), instagramPhotos.shift(), instagramPhotos.shift(), instagramPhotos.shift()]; %>
      <div class="row">
        <% for (const item of rowPhotos) { %>
          <% if (!item) continue; %>
          <div class="col-md-3">
            <div class="portfolio-image-container lightbox">
              <img class="portfolio-image thumbnail" src="<%= item.images.standard_resolution.url %>">
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <h2>Reviews</h2>
</div>
