<h1>Edit artist</h1>

<form method="post" action="/artists/<%= artist._id %>">
  <input type="hidden" name="_method" value="put">

  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= artist.title %>">

  <label for="description">Description</label>
  <textarea id="description" name="description"><%= artist.description %></textarea>

  <label for="youtubeId">Youtube link</label>
  <input type="text" id="youtubeId" name="youtubeId" value="<%= artist.youtubeId %>">

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre" value="<%= artist.genre %>">

  <input type="submit" value="Save" class="button-primary">
</form>
