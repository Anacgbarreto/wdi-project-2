<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <title>Novanoid</title>
  <link href="https://fonts.googleapis.com/css?family=Droid+Sans+Mono" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
</head>
<body>
  <nav class="navbar navbar-default navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <div class="logotop">
          <a class="navbar-brand" href="/">
            <img src="/images/eye2.svg">
            Novanoid
          </a>
        </div>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/studios">Studios</a></li>
          <li><a href="/artists">Artists</a></li>
          <% if (!locals.noSearch) { %>
            <li><img class="search-icon" src="/images/search.png"></li>
          <% } %>
        </ul>

        <% if (!locals.noSearch) { %>
          <form class="navbar-form navbar-left search-box" method="get" action="/search">
            <input type="text" name="q" class="form-control" placeholder="Search">
          </form>
        <% } %>

        <ul class="nav navbar-nav navbar-right">
          <% if (loggedIn) { %>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    <div class="container">
      <% for (const type in messages) { %>
        <p><%= messages[type] %></p>
      <% } %>
    </div>
    <%- body %>
  </main>
  <footer>
    <div class="container">
      <ul class="leftfoot list-unstyled">
        <li><a href="/">Home</a></li>
        <li><a href="/studios">Studios</a></li>
        <li><a href="/artists">Artists</a></li>
      </ul>
      <ul class="rightfoot list-unstyled">
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
      <p>&copy; Novanoid - Site by Ana Barreto</p>
    </div>
  </footer>

  <script src="/js/app.js"></script>
</body>

</html>
